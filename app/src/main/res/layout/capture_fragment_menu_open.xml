<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="cafe.plastic.documentscanner.ui.fragments.CaptureFragment.Handlers" />

        <variable
            name="viewmodel"
            type="cafe.plastic.documentscanner.ui.fragments.CaptureViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.CaptureFragment">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/uigroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="captureButton,popupMenuBackground,backButton,flashToggle,autofocus,outlineToggle,about,aboutLabel" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/loadinggroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="captureProgressBackground, captureProgress"/>

        <io.fotoapparat.view.CameraView
            android:id="@+id/camera_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </io.fotoapparat.view.CameraView>

        <ImageButton
            android:id="@+id/captureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:onClickListener="@{handlers::onCaptureButtonClicked}"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/popupMenuBackground"
            android:layout_width="96dp"
            android:layout_height="0dp"
            android:background="@color/popupMenuBackground"
            android:paddingRight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="?android:selectableItemBackground"
            app:layout_constraintEnd_toEndOf="@+id/popupMenuBackground"
            app:layout_constraintStart_toStartOf="@id/popupMenuBackground"
            app:layout_constraintTop_toTopOf="@id/popupMenuBackground"
            app:srcCompat="@drawable/baseline_arrow_back_white_48" />

        <ImageButton
            android:id="@+id/flashToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:onClickListener="@{handlers::onFlashButtonClicked}"
            app:cameraState="@{viewmodel.cameraState}"
            app:flashAuto="@{@drawable/baseline_flash_auto_white_48}"
            app:flashOff="@{@drawable/baseline_flash_off_white_48}"
            app:flashOn="@{@drawable/baseline_flash_on_white_48}"
            app:layout_constraintEnd_toEndOf="@+id/popupMenuBackground"
            app:layout_constraintStart_toStartOf="@id/popupMenuBackground"
            app:layout_constraintTop_toBottomOf="@+id/backButton"
            tools:src="@drawable/baseline_flash_on_white_48" />


        <ImageButton
            android:id="@+id/autofocus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:onClickListener="@{handlers::onFocusButtonClicked}"
            app:cameraState="@{viewmodel.cameraState}"
            app:focusAuto="@{@drawable/baseline_focus_auto_white_48}"
            app:focusFixed="@{@drawable/baseline_focus_fixed_white_48}"
            app:layout_constraintEnd_toEndOf="@+id/popupMenuBackground"
            app:layout_constraintStart_toStartOf="@id/popupMenuBackground"
            app:layout_constraintTop_toBottomOf="@+id/flashToggle"
            tools:src="@drawable/baseline_focus_auto_white_48" />


        <ImageView
            android:id="@+id/outlineToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/popupMenuBackground"
            app:layout_constraintStart_toStartOf="@id/popupMenuBackground"
            app:layout_constraintTop_toBottomOf="@+id/autofocus"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <ImageView
            android:id="@+id/about"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/popupMenuBackground"
            app:layout_constraintStart_toStartOf="@+id/popupMenuBackground"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/aboutLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/about"
            app:layout_constraintEnd_toEndOf="@+id/popupMenuBackground"
            app:layout_constraintStart_toStartOf="@+id/popupMenuBackground" />

        <View
            android:id="@+id/captureProgressBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/captureProgressBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/captureProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>